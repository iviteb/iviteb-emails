<table width="100%" align="center" border="0" cellpadding="0" cellspacing="0" class="shippingTable">
  <!-- partial:partials/many-packages-notification.hbs --><!-- partial -->
  <tr>
    <td>
      <!-- Intro message: All items shipped -->
      {{#compare
        shippingData.logisticsInfo.0.selectedDeliveryChannel
        "=="
        "pickup-in-point"
      }}
        <!-- partial:partials/messages/pickup.hbs --><!-- partial -->
        {{else}}
          <!-- partial:partials/messages/shipping.hbs --><!-- partial -->
      {{/compare}}
      <p class="mb0 lh-copy">
        Gasesti factura
        {{#if package.invoiceUrl}}
          <a href="{{package.invoiceUrl}}" target="_blank" class="action-tertiary">aici</a>.
        {{else}}
          <a href="((i18n.common.siteAddress))/account#/my-invoices" target="_blank" class="action-tertiary">aici</a>.
        {{/if}}
      </p>
      <p class="mb0 lh-copy">
        Pentru a vedea unde se afla coletul tau acceseaza link-ul
        {{#hasSubStr package.trackingUrl "https://" }}
          <a target='_blank' href="{{package.trackingUrl}}" class="action-tertiary">aici</a>.
          {{else}}
            <a target='_blank' href="https://{{package.trackingUrl}}" class="action-tertiary">aici</a>.
        {{/hasSubStr}}
      </p>
    </td>
  </tr>
  <!-- Order info -->
  <tr>
    <td class="pv4">
      {{#richShippingData shippingData}}
        {{#group logisticsInfo by="addressId"}}
          <h3 class="ma0 mb2">((i18n.shipping.address))</h3>
          <!-- Address info -->
          <!-- partial:partials/address-delivery-no-title.hbs --><!-- partial -->
          <!-- partial:partials/address-pickup-no-title.hbs --><!-- partial -->
          <!-- partial:partials/address-pickup-business-hours.hbs --><!-- partial -->
        {{/group}}
      {{/richShippingData}}
    </td>
  </tr>
  <tr>
    <td class="pt4 bt b--light-gray">
      {{#richShippingData shippingData}}
        {{#group logisticsInfo by="addressId"}}
          <h3 class="mt0 mb2">((i18n.order.package))</h3>
          <!-- Address info -->
          {{#group items by="packageId"}}
            {{#compare
              items.0.selectedDeliveryChannel "==" "pickup-in-point"
            }}
              <!-- partial:partials/items.hbs --><!-- partial -->
              {{else}}
                <!-- partial:partials/package.hbs --><!-- partial -->
            {{/compare}}
          {{/group}}
        {{/group}}
      {{/richShippingData}}
    </td>
  </tr>
</table>
