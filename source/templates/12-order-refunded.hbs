<table width="100%" align="center" border="0" cellpadding="0" cellspacing="0" class="refundedTable productsTable">
  <tr style="box-sizing: border-box !important;">
    <td class="pb4 bb b--light-gray">
      <table width="100%" border="0" cellpadding="0" cellspacing="0" class="refundedProducts">
        <h3 class="mb3">((i18n.refund.refundedItems))</h3>
        {{#eq package.type 'Input'}}
          {{#each items}}
            {{#each ../package.items}}
              {{#eq @../index this.itemIndex}}
                <tr>
                  <td width="88" class="v-mid pr3 pv2">
                    <img alt="{{../name}}"
                      src="{{replace (replace ../imageUrl "-55-55" "-144-144" ) "-80-80" "-144-144" }}" width="72"
                      height="72" style="min-width: 72px; object-fit: contain;">
                  </td>
                  <td class="v-mid pv2">
                    <p class="ma0 f6 word-wrap">{{../name}}</p>
                    <p class="mt-4 mb0 f7 lh-title b base-500">{{../refId}}</p>
                    <p class="mt-4 mb0 f7 lh-title base-500">
                      {{../quantity}} x
                      <span>
                        {{#if ../sellingPrice}}
                          {{formatCurrency ../sellingPrice}} ((i18n.common.currency))
                        {{else}}
                          ((i18n.common.free))
                        {{/if}}
                      </span>
                    </p>
                  </td>
                </tr>
              {{/eq}}
            {{/each}}
          {{/each}}
        {{/eq}}
      </table>
    </td>
  </tr>
  <tr>
    <td class="pt4 fw7">
      ((i18n.refund.refundedTotal))
      <span>{{formatCurrency package.restitutions.Refund.value}}
        ((i18n.common.currency))</span>
    </td>
  </tr>
</table>
