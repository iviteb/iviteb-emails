<table class="productsTable" width="100%" border="0" cellpadding="0" cellspacing="0">
  {{#each items}}
    <!-- back to order items list -->
    {{#each ../../../../items}}
      <!-- show info for this shippingInfo item -->
      {{#eq @index ../itemIndex}}
        {{#unless sellingPrice}}
          {{#if parentAssemblyBinding}}
            <!-- Do nothing when both conditions are met -->
          {{else}}
            <!-- Code to display information when parentAssemblyBinding is null -->
            <!-- partial:item.hbs --><!-- partial -->
          {{/if}}
        {{else}}
          <!-- Code to display information when sellingPrice is not zero -->
          <!-- partial:item.hbs --><!-- partial -->
        {{/unless}}
        {{#each bundleItems}}
          {{#if name}}
            <tr>
              <td width="56" class="v-mid pa3">
                <img alt="{{name}}" src="{{replace imageUrl '-55-55' '-80-80' }}" width="40" height="40"
                  style="min-width: 40px; object-fit: contain;">
              </td>
              <td class="v-mid pv3 pr3">
                <p class="ma0 fs-15 word-wrap">
                  {{#compare quantity ">" 1}}{{quantity}}x {{/compare}}
                  <strong>{{name}}</strong>
                </p>
                <p class="mt-4 mb0">
                  {{formatCurrency price}} ((i18n.common.currency))
                  </span>
                </p>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      {{/eq}}
    {{/each}}
  {{/each}}
</table>