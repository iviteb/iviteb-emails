<table class="productsTable" width="100%" border="0" cellpadding="0" cellspacing="0">
  {{#each items}}
    <!-- back to order items list -->
    {{#each ../../../../items}}
      <!-- show info for this shippingInfo item -->
      {{#eq @index ../itemIndex}}
        <tr>
          <td width="72" class="v-mid pr3 pv2">
            <img alt="{{name}}" src="{{replace (replace imageUrl "-55-55" "-112-112" ) "-80-80" "-112-112" }}"
              width="56" height="56" style="min-width: 56px; object-fit: contain;">
          </td>
          <td class="v-mid pv2">
            <p class="ma0 fs-15 word-wrap">{{name}}</p>
            <p class="mt-6 mb0">
              {{quantity}} {{#eq measurementUnit "un"}} ((i18n.common.units))
    {{else}} {{measurementUnit}} {{/eq}}
              <span class="fw7 action-primary">
                {{#if sellingPrice}}
                  {{formatCurrency sellingPrice}} ((i18n.common.currency))
                {{else}}
                  ((i18n.common.free))
                {{/if}}
              </span>
            </p>
          </td>
        </tr>
        {{#each bundleItems}}
          {{#if name}}
            <tr>
              <td width="72" class="v-mid pr3 pv2">
                <img alt="{{name}}" src="{{replace (replace imageUrl "-55-55" "-112-112" ) "-80-80" "-112-112" }}"
                  width="56" height="56" style="min-width: 56px; object-fit: contain;">
              </td>
              <td class="v-mid pv2">
                <p class="ma0 fs-15 word-wrap">{{name}}</p>
                <p class="mt-6 mb0">
                  {{quantity}} ((i18n.common.units))
                  <span class="fw7 action-primary">
                    {{#if price}}
                      {{formatCurrency price}} ((i18n.common.currency))
                    {{else}}
                      ((i18n.common.free))
                    {{/if}}
                  </span>
                </p>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      {{/eq}}
    {{/each}}
  {{/each}}
</table>