<h3 class="mt3 mb-10 ttu f5 lh-copy">((i18n.common.summary))</h3>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="totalsTable">
  {{#each totals}}
    {{#if value}}
      <tr>
        <td class="pt-6 pb-6 pr1 fs-15 base-500 bb b--light-gray">
          {{#eq id "Items"}}
            ((i18n.common.items))
          {{/eq}}
          {{#eq id "Shipping"}}
            ((i18n.common.shipping))
          {{/eq}}
          {{#eq id "Discounts"}}
            ((i18n.common.discounts))
          {{/eq}}
          {{#eq id "Tax"}}
            ((i18n.common.taxes))
          {{/eq}}
          {{#eq id "CustomTax"}}
            ((i18n.common.customTaxes))
          {{/eq}}
          {{#eq id "Change"}}
            ((i18n.common.change))
          {{/eq}}
        </td>
        <td class="pt-6 pb-6 pl1 fs-15 tr bb b--light-gray">{{formatCurrency value}}
          ((i18n.common.currency))
        </td>
      </tr>
    {{/if}}
  {{/each}}
  {{#if value}}
    <tr>
      <td class="pt-6 pb-6 pr1 fs-15">((i18n.common.subtotal))</td>
      <td class="pt-6 pb-6 pl1 fs-15 tr">{{formatCurrency value}} ((i18n.common.currency)) </td>
    </tr>
  {{/if}}
</table>