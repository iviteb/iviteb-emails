{{#if orders.0.giftRegistryData}}
  {{orders.0.giftRegistryData.description}}
{{else}}
  {{#each ../../shippingData.availableAddresses}}
    {{#eq ../addressId AddressId}}
      <strong class="db my-10">{{receiverName}}</strong>
      {{street}}{{#compare number "!=" "-"}}, {{number}}{{/compare}}
      {{#if complement}}, {{complement}}{{/if}}
      {{#if neighborhood}}, {{neighborhood}}{{/if}} {{city}}, {{state}} <br />
      ((i18n.shipping.postalCode)) {{postalCode}}
    {{/eq}}
  {{/each}}
{{/if}}