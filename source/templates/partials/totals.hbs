{{!-- <h3 class="mt4 mb2">((i18n.common.summary))</h3> --}}
<div class="spacer-36"></div>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="totalsTable">
  {{#each totals}}
    {{#if value}}
      <tr>
        <td class="py-12 pl3 pr1">
          {{#eq id "Items"}}
            ((i18n.common.items))
          {{/eq}}
          {{#eq id "Shipping"}}
            ((i18n.common.shipping))
          {{/eq}}
          {{#eq id "Discounts"}}
            <span class="green-text">((i18n.common.discounts)) ({{formatCurrency (math (math value "/"
              ../totals.0.value) "*"-10000)}}%)</span>
          {{/eq}}
          {{#eq id "Tax"}}
            ((i18n.common.taxes))
          {{/eq}}
          {{#eq id "CustomTax"}}
            ((i18n.common.customTaxes))
          {{/eq}}
        </td>
        <td class="py-12 pr1 pr3 fw7 tr">
          {{#eq id "Discounts"}}
            <span class="green-text">
              {{formatCurrency value}} ((i18n.common.currency))
            </span>
    {{else}}
      {{formatCurrency value}} ((i18n.common.currency))
          {{/eq}}
        </td>
      </tr>
    {{/if}}
  {{/each}}
</table>
{{#if value}}
  <table width="100%" border="0" cellpadding="0" cellspacing="0" class="totalsTableLastLine">
    <tr>
      <td class="pt-40 pl3 pr1 fs-15 f3 fw7">
        ((i18n.common.total))</td>
      <td class="pt-40 pl1 pr3 fs-18 f3 fw7 tr">
        {{formatCurrency value}}
        ((i18n.common.currency))
      </td>
    </tr>
  </table>
{{/if}}